<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear"
    android:padding="@dimen/box_inset_layout_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">

        <Button
            android:layout_marginTop="1dp"
            android:id="@+id/plateau_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="Plateau Mode" />

        <Button
            android:layout_marginTop="35dp"
            android:id="@+id/downwardslope_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="DownwardSlope Mode" />

        <Button
            android:layout_marginTop="70dp"
            android:id="@+id/upwardslope_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="UpwardSlope Mode" />

        <Button
            android:layout_marginTop="105dp"
            android:id="@+id/hill_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="Hill" />

    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>